<div id="breadcrumbs"
     i18n:domain="plone"
     tal:define="breadcrumbs view/breadcrumbs;
                 is_rtl view/is_rtl">

  <div class="breadcrumbsContent">
    <tal:breadcrumbs condition="python:len(breadcrumbs) > 1">
      <div class="breadcrumbTopWrapper">
        <a tal:attributes="href python:breadcrumbs[1].get('absolute_url');
                           class python:len(breadcrumbs) > 2 and 'breadcrumbTop withSeparator' or 'breadcrumbTop'">
          <span tal:content="python:breadcrumbs[1].get('Title')" />
        </a>
      </div>
      <tal:other_breadcrumbs repeat="crumb python:breadcrumbs[2:-1]">
        <a class="breadcrumbOther"
           tal:attributes="href crumb/absolute_url"
           tal:content="crumb/Title">
           Voce di terzo livello
        </a>
        <span tal:condition="not:repeat/crumb/end"
              class="breadcrumbSeparator"></span>
      </tal:other_breadcrumbs>
    </tal:breadcrumbs>
  </div>
</div>
